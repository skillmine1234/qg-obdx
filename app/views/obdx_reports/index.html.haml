  .control-group
    = label_tag 'Report Type'
    = select_tag :report_type, options_for_select([['Bill Desk', 'bill_desk'], ['wallet bussiness','wallet_bussiness'], ['Credit Card Bussiness', 'credit_card_bussiness']]), :prompt => 'Select Report'
  .control-group
    = label_tag 'From Date'
    = text_field_tag "from_date"
  .control-group
    = label_tag 'To date'
    = text_field_tag "to_date"
